
#include<stdio.h>
#include<conio.h>
void add();
void mul();
void sub();
void div();
int a,b;
void main()
{
int choice;
clrscr();
printf("please enter your choice \n 1. for Add \n 2.  for division \n 3. for subtraction \n 4. for multiply\n 5.for exit\n ");
scanf("%d",&choice);
switch(choice)
{
case 1: add();
	break;
case 2: div();
	break;
case 3: sub();
	break;
case 4: mul();
	break;
case 5: exit(0);

default: printf("wrong choice");
}
getch();
}

void add()
{
	int add,a,b;
	printf("Please enter value of A and B\n");
	scanf("%d",&a);
	scanf("%d",&b);
	add=a+b;
	printf("addition=%d",add);

}

void sub()
{

	int sub;
	printf("Please enter value of A and B\n");
	scanf("%d%d",&a,&b);
	sub=a-b;
	printf("substraction=%d",sub);
}

void mul()
{

	int mul;
	printf("Please enter value of A and B\n");
	scanf("%d%d",&a,&b);
	mul=a*b;
	printf("Multiplication=%d",mul);

}

void div()
{

	int div;
	printf("Please enter value of A and B\n");
	scanf("%d%d",&a,&b);
	div=a/b;
	printf("division=%d",div);
}
